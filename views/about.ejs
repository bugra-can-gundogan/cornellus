    <script>
        function opendrop() {
            var elem = document.getElementById("pomerenia");
            if(elem.style.display == "flex"){
                elem.style.display = "none";
            }else{
                elem.style.display = "flex";
            }
        }

        window.onclick = function (event) {
            if (!event.target.matches('#dropnavbar')) {
                var elem = document.getElementById("pomerenia");
                elem.style.display = "none";
            }
        }
    </script>
